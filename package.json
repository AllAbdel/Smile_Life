{
  "name": "smile-life",
  "version": "1.0.0",
  "description": "Jeu de cartes Smile Life - Collectionnez des sourires !",
  "main": "electron.js",
  "author": "AllAbdel",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && node server.js",
    "start:frontend": "cd frontend && npm start",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run start:backend\" \"cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo Backend ready",
    "build": "npm run build:frontend",
    "dist": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --win portable",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.allabdel.smilelife",
    "productName": "Smile Life",
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "electron.js",
      "backend/**/*",
      "frontend/build/**/*",
      "!frontend/node_modules",
      "package.json",
      "smile.ico"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "smile.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "smile.ico",
      "uninstallerIcon": "smile.ico",
      "installerHeaderIcon": "smile.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Smile Life",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "Smile-Life-Portable.exe"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.3"
  }
}
